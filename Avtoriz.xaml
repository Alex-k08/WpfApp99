<Page x:Class="WpfApp1.Avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Avtoriz">

    <StackPanel>
        <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="40"></Label>
        <Label Content="Введите свой логин" FontSize="30"></Label>
        <TextBox FontSize="20" x:Name="Login1"></TextBox>
        <Label Content="Введите свой пароль" FontSize="30"></Label>
        <TextBox FontSize="20" x:Name="pass"></TextBox>
        <Label Content="Введите свой пароль повторно" FontSize="30"></Label>
        <TextBox FontSize="20" x:Name="povt"></TextBox>
        <Button Content="Зарегестрироваться" Margin="40" Height="70" Width="150" Click="Button_Click"></Button>
    </StackPanel>
</Page>
