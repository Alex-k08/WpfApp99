<Page x:Class="WpfApp1.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <StackPanel>
        <Label Content="Пожалуйста, введите свой логин и пароль для входа в аккаунт" HorizontalAlignment="Center" FontSize="20"></Label>
        <Label Content="Login" FontSize="20"></Label>
        <TextBox Height="30" FontSize="20" x:Name="Login1"></TextBox>
        <Label Content="Password" FontSize="20"></Label>
        <PasswordBox Height="30" FontSize="20" x:Name="Password1"></PasswordBox>
        <Button Content="Come_In" Height="30" Click="Button_Click"></Button>
    </StackPanel>
</Page>
